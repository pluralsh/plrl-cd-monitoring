extraEnv:
  - name: LOKI_USERNAME
    valueFrom:
      secretKeyRef:
        name: basic-auth
        key: user
  - name: LOKI_PASSWORD
    valueFrom:
      secretKeyRef:
        name: basic-auth
        key: password
config:
  clients:
  - url: http://loki-gateway/loki/api/v1/push
    tenant_id: 1
    basic_auth:
      username: ${LOKI_USERNAME}
      password: ${LOKI_PASSWORD}

